{
    "name": "test-driven-architecture",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.30",
        "jest": "<28.0.0-0",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    },
    "scripts": {
        "test:acceptance": "jest --config ./test/jest.acceptance.json",
        "test:micro": "jest --config ./test/jest.micro.json",
        "test:contract": "jest --config ./test/jest.contract.json",
        "test": "npm run test:acceptance && npm run test:micro && npm run test:contract"
    },
    "dependencies": {
        "@mikro-orm/cli": "^5.1.3",
        "@mikro-orm/core": "^5.1.3",
        "@mikro-orm/sqlite": "^5.1.3",
        "@types/uuid": "^8.3.4",
        "uuid": "^8.3.2"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "test",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "mikro-orm": {
        "useTsNode": true
    }
}